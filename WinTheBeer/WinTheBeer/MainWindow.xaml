<Window x:Class="WinTheBeer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinTheBeer"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="820">
    <Grid Background="#FFE2CA57">
        <TextBox x:Name="LogBox" HorizontalAlignment="Left" Height="409" Margin="10,40,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="483"/>
        <TextBox x:Name="InputBox" HorizontalAlignment="Left" Height="19" Margin="10,455,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="403"/>
        <ListBox HorizontalAlignment="Left" Height="434" Margin="514,40,0,0" VerticalAlignment="Top" Width="270"/>
        <ToolBar HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="814" Margin="0,0,-0.4,0">
            <Button x:Name="Connect" Content="Connect" Click="Connect_Click"/>
            <Button x:Name="Save" Content="Save" VerticalAlignment="Top" Click="Save_Click"/>
        </ToolBar>
        <Button x:Name="Send_Button" Content="Button" HorizontalAlignment="Left" Margin="418,455,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
